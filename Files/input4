import 'package:flutter/material.dart';
import 'pageTwo.dart';
import 'page_three.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: PageTwo(),
    );
  }
}




class PageTwo extends StatelessWidget {
  string password = "init";
  string email = "init";

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: ListView(
        padding: EdgeInsets.symmetric(50),
        children: [
          Container(
            height: 80,
          ),
          Container(

              margin: EdgeInsets.symmetric(130),
              child: Text(Login)
              ),
          Container(
            height: 50,
          ),
          TextFormField(
             onChanged: (newEmail) {
                        email = newEmail;
                      },

            decoration: InputDecoration(hintText: "enter your email"),
          ),
          Container(
            height: 50,
          ),
          TextFormField(
 onChanged: (newPassword) {
                        password = newPassword;
                      },
            decoration: InputDecoration(hintText: 'enter your password'),
          ),
          Container(
            height: 50,
          ),
          Container(
            color: Colors.blueGrey,
            width: 40,
            child: TextButton(
              onTap: () {
                Navigator.push(
                    context,
                    MaterialPageRoute(
                        builder: (context) => PageThree(
                               email,
                              password
                            )));
              },
              child: Text(Done)
            ),
          ),
        ]
      ),
    );
  }
}


class PageThree extends StatelessWidget {
   string password;
   string email;


  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Column(children: [
        Container(
          height: 80,
        ),
        Text(email),
        Container(
          height: 50,
        ),
        Text(password),
      ]),
    );
  }
}